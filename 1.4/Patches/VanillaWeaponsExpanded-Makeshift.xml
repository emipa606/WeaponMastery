<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Weapons Expanded - Makeshift</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_MakeshiftPistol"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Pistol</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_MakeshiftSMG"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>SMG</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_MakeshiftRifle"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Rifle</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_MakeshiftShotgun"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Shotgun</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_MakeshiftLMG"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Machine Gun</gmclass>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>