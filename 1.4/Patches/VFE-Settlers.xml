<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Factions Expanded - Settlers</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VFES_Gun_DoubleActionRevolver"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Pistol</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VFES_Gun_DoubleBarreledShotgun"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Shotgun</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VFES_Gun_HuntingRifle"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Sniper Rifle</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VFES_Tomahawk"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Thrown</gmclass>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>