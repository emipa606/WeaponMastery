      <operations>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RE_Gun_SpacerAssaultRifle"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Rifle</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RE_Gun_SpacerBattleRifle"]</xpath>
