<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Rim-Effect: Drell</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RE_Gun_AllianceRapidSniperRifle"]</xpath>
          <value>
            <li Class="SK_WeaponMastery.DefModExtension_Mastery">
              <gmclass>Sniper Rifle</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RE_Gun_AllianceCompactSMG"]</xpath>
          <value>
            <li Class="SK_WeaponMastery.DefModExtension_Mastery">
              <gmclass>SMG</gmclass>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>