<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Weapons Expanded - Quickdraw</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_AutomaticPistol"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Pistol</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_BullpupRifle"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Rifle</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_BullpupDMR"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>Sniper Rifle</gmclass>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="VWE_Gun_PDW"]</xpath>
          <value>
            <li Class="WeaponMastery.DefModExtension_Mastery">
              <gmclass>SMG</gmclass>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>